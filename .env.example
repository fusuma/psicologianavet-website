# Brevo API Configuration
# Sign up at https://www.brevo.com/ and get your API key from the dashboard

# Brevo API Key for authentication
BREVO_API_KEY=your_api_key_here

# Brevo List ID for Tutors mailing list
# Find this in your Brevo dashboard under Contacts > Lists
BREVO_TUTORS_LIST_ID=123

# Brevo List ID for Vets mailing list
# Find this in your Brevo dashboard under Contacts > Lists
BREVO_VETS_LIST_ID=456

# Google Analytics Configuration
# Create a Google Analytics 4 property at https://analytics.google.com/
# Get your Measurement ID (format: G-XXXXXXXXXX) from Admin > Data Streams

# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Bot Detection Configuration
# Advanced anti-bot system with configurable thresholds

## Temporal Validation (milliseconds)
# Minimum time between form load and submit (default: 2000 = 2 seconds)
BOT_MIN_FORM_TIME_MS=2000

# Maximum time between form load and submit (default: 3600000 = 1 hour)
BOT_MAX_FORM_TIME_MS=3600000

## Behavioral Validation
# Minimum number of user interactions required (focus + keystrokes, default: 2)
BOT_MIN_INTERACTIONS=2

# Require focus events on email field (default: true)
BOT_REQUIRE_FOCUS=true

# Require mouse movement detection (default: true)
# Note: Set to false for mobile-first applications
BOT_REQUIRE_MOUSE=true

## Honeypot Validation
# Enable honeypot field validation (default: true)
BOT_HONEYPOT_ENABLED=true

## Logging Configuration
# Enable bot detection logging (default: true)
BOT_LOGGING_ENABLED=true

# Log level: info (all submissions), warn (bots only), error (critical only)
# Default: warn
BOT_LOG_LEVEL=warn

## CAPTCHA Fallback (Optional - Future Feature)
# Enable CAPTCHA fallback for suspicious submissions (default: false)
BOT_CAPTCHA_ENABLED=false

# Number of failed attempts before showing CAPTCHA (default: 3)
BOT_CAPTCHA_THRESHOLD=3

# Optional: reCAPTCHA keys (required if CAPTCHA enabled)
# NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-site-key-here
# RECAPTCHA_SECRET_KEY=your-secret-key-here

## Admin API Access
# Secret token for accessing bot detection statistics endpoint
# Generate with: openssl rand -base64 32
# Required for /api/v1/bot-detection/stats endpoint
ADMIN_API_TOKEN=your-admin-token-here

# Optional: Comma-separated list of allowed admin IPs
# ADMIN_IPS=127.0.0.1,192.168.1.100
